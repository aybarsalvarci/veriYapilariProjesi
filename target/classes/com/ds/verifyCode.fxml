<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.VerifyCodeController">
    <children>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="400.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <effect>
                <DropShadow color="#0000001a" radius="20.0" />
            </effect>
            <children>
                <VBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Label text="Kodu Doğrula" textFill="#111827">
                            <font>
                                <Font name="Segoe UI Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="E-posta adresinize gönderilen 6 haneli doğrulama kodunu aşağıya giriniz." textAlignment="CENTER" textFill="#6B7280" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Doğrulama Kodu" textFill="#374151">
                            <font>
                                <Font name="Segoe UI Semibold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtCode" alignment="CENTER" prefHeight="55.0" promptText="0 0 0 0 0 0" style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #111827;">
                            <font>
                                <Font name="Segoe UI Bold" size="22.0" />
                            </font>
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleVerify" prefHeight="48.0" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" text="Kodu Doğrula">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

                <Label fx:id="lblMessage" alignment="CENTER" maxWidth="Infinity" textFill="#EF4444" wrapText="true">
                    <font>
                        <Font name="Segoe UI" size="13.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</StackPane>