<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="500.0" spacing="0.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.SystemUserFormController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 0 0 10 10;">
            <children>
                <Label fx:id="lblTitle" text="Kullanıcı Bilgileri" textFill="#111827">
                    <font><Font name="Segoe UI Bold" size="18.0" /></font>
                </Label>
            </children>
            <padding><Insets left="25.0" right="25.0" /></padding>
            <effect><DropShadow color="#0000000d" radius="5.0" /></effect>
        </HBox>

        <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;">
            <VBox.margin><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></VBox.margin>
            <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>
            <effect><DropShadow color="#0000000d" radius="15.0" /></effect>
            <children>

                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Ad" textFill="#4B5563"><font><Font name="Segoe UI Semibold" size="13.0" /></font></Label>
                            <TextField fx:id="txtFirstName" prefHeight="42.0" promptText="Ad giriniz" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-background-color: #F9FAFB;" />
                        </VBox>
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Soyad" textFill="#4B5563"><font><Font name="Segoe UI Semibold" size="13.0" /></font></Label>
                            <TextField fx:id="txtLastName" prefHeight="42.0" promptText="Soyad giriniz" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-background-color: #F9FAFB;" />
                        </VBox>
                    </children>
                </HBox>

                <VBox spacing="6.0">
                    <Label text="E-Posta" textFill="#4B5563"><font><Font name="Segoe UI Semibold" size="13.0" /></font></Label>
                    <TextField fx:id="txtEmail" prefHeight="42.0" promptText="ornek@email.com" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-background-color: #F9FAFB;" />
                </VBox>

                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Şifre" textFill="#4B5563"><font><Font name="Segoe UI Semibold" size="13.0" /></font></Label>
                            <PasswordField fx:id="txtPassword" prefHeight="42.0" promptText="Şifre giriniz" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-background-color: #F9FAFB;" />
                        </VBox>
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Yetki" textFill="#4B5563"><font><Font name="Segoe UI Semibold" size="13.0" /></font></Label>
                            <ComboBox fx:id="cmbRole" maxWidth="Infinity" prefHeight="42.0" promptText="Seçiniz..." style="-fx-background-color: #F9FAFB; -fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-border-radius: 8;" />
                        </VBox>
                    </children>
                </HBox>

                <Pane prefHeight="15.0" />

                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="btnSave" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSave" prefHeight="48.0" style="-fx-background-color: #10B981; -fx-cursor: hand; -fx-background-radius: 8; -fx-font-weight: bold;" text="Kaydet" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font><Font name="Segoe UI" size="15.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>