<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="Infinity" maxWidth="Infinity" spacing="20.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.CorporateCustomerAddController">
    <children>
        <Label text="Yeni Kurumsal Müşteri Ekle" textFill="#1f2937">
            <font>
                <Font name="Segoe UI Bold" size="24.0" />
            </font>
        </Label>

        <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Müşteri Bilgileri" textFill="#6b7280">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="İsim:" textFill="#374151" GridPane.rowIndex="0">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtFirstname" promptText="Müşterinin adını giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <Label text="Soyisim:" textFill="#374151" GridPane.rowIndex="1">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtLastname" promptText="Müşterinin soyadını giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <Label text="Email Adresi:" textFill="#374151" GridPane.rowIndex="2">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtEmail" promptText="ornek@email.com" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <Label text="Vergi Numarası:" textFill="#374151" GridPane.rowIndex="3">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtTaxNumber" promptText="Vergi Numarası" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </GridPane>

                <Pane VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button onAction="#handleIptal" mnemonicParsing="false" style="-fx-background-color: #E5E7EB; -fx-cursor: hand;" text="İptal" textFill="#374151">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </padding>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCreate" style="-fx-background-color: #10B981; -fx-cursor: hand;" text="Kaydet" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                            </padding>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>

            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <effect>
                <DropShadow color="#0000000d" height="10.0" radius="4.5" width="10.0" />
            </effect>
        </VBox>

    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>