<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.ImageViewerController">
    <children>
        <Label fx:id="lblTitle" text="Görsel 1 / 3" textFill="#555555">
            <font>
                <Font name="Segoe UI Semibold" size="16.0" />
            </font>
        </Label>

        <StackPane VBox.vgrow="ALWAYS" style="-fx-border-color: #dddddd; -fx-border-width: 1;">
            <children>
                <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lblNoImage" text="Görsel Yok" textFill="#999999" visible="false">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </StackPane>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="btnPrev" mnemonicParsing="false" onAction="#handlePrevious" text="&lt; Önceki" prefWidth="100.0" style="-fx-background-color: #E0E0E0; -fx-cursor: hand;" />
                <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleNext" text="Sonraki &gt;" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" />
            </children>
            <padding>
                <Insets bottom="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>