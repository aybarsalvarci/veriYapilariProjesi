<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="Infinity" maxWidth="Infinity" spacing="20.0" style="-fx-background-color: #F3F4F6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ds.Controllers.BuildingPropertyAddController">
    <children>
        <Label text="Yeni Konut Ekle" textFill="#1f2937">
            <font>
                <Font name="Segoe UI Bold" size="24.0"/>
            </font>
        </Label>

        <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Konut Bilgileri" textFill="#6b7280">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>

                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                    </rowConstraints>

                    <children>
                        <Label text="Başlık:" textFill="#374151" GridPane.rowIndex="0">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtTitle" promptText="Başlık Giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Açıklama:" textFill="#374151" GridPane.rowIndex="1">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtDescription" promptText="Açıklama Giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Boyut (m²):" textFill="#374151" GridPane.rowIndex="2">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtSize" promptText="Örn: 120" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Konum: " textFill="#374151" GridPane.rowIndex="3">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtLocation" promptText="Konum Giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Ücret: " textFill="#374151" GridPane.rowIndex="4">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtPrice" promptText="Ücret Giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Bağımlılık Türü: " textFill="#374151" GridPane.rowIndex="5">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="txtIndependenceType" promptText="Bağımlılık Türü Giriniz" style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="Kontrat Türü: " textFill="#374151" GridPane.rowIndex="6">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <ComboBox fx:id="cmbContractType" maxWidth="Infinity" promptText="Seçiniz..." style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                        <Label text="Müşteri: " textFill="#374151" GridPane.rowIndex="7">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                        </Label>
                        <ComboBox fx:id="cmbCustomer" maxWidth="Infinity" promptText="Müşteri Seçiniz..." style="-fx-background-radius: 4; -fx-border-color: #D1D5DB;" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                    </children>
                </GridPane>

                <Pane VBox.vgrow="ALWAYS"/>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button onAction="#handleIptal" mnemonicParsing="false"
                                style="-fx-background-color: #E5E7EB; -fx-cursor: hand;" text="İptal"
                                textFill="#374151">
                            <font><Font name="Segoe UI" size="14.0"/></font>
                            <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/></padding>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCreate"
                                style="-fx-background-color: #10B981; -fx-cursor: hand;" text="Kaydet" textFill="WHITE">
                            <font><Font name="Segoe UI Bold" size="14.0"/></font>
                            <padding><Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/></padding>
                        </Button>
                    </children>
                    <padding><Insets top="20.0"/></padding>
                </HBox>

            </children>
            <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/></padding>
            <effect>
                <DropShadow color="#0000000d" height="10.0" radius="4.5" width="10.0"/>
            </effect>
        </VBox>

    </children>
    <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/></padding>
</VBox>