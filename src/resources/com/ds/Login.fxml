<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Pane?>
<StackPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.AuthController">
    <children>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="400.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <effect>
                <DropShadow color="#0000001a" radius="20.0" />
            </effect>
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Hoş Geldiniz" textFill="#111827">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Lütfen hesabınıza giriş yapın" textFill="#6B7280">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <VBox spacing="6.0">
                            <children>
                                <Label text="E-Posta" textFill="#374151">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtEmail" prefHeight="45.0" promptText="ornek@email.com" style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets left="12.0" right="12.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="6.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Şifre" textFill="#374151">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Pane HBox.hgrow="ALWAYS" />
                                        <Hyperlink onAction="#handleForgotPassword" style="-fx-border-color: transparent;" text="Şifremi unuttum?" textFill="#10B981">
                                            <font>
                                                <Font name="Segoe UI" size="13.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </HBox>
                                <PasswordField fx:id="txtPassword" prefHeight="45.0" promptText="••••••••" style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets left="12.0" right="12.0" />
                                    </padding>
                                </PasswordField>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLoginBtn" prefHeight="48.0" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" text="Giriş Yap">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                        </Button>
                        <Label fx:id="lblMessage" alignment="CENTER" maxWidth="Infinity" textFill="#EF4444" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="13.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>