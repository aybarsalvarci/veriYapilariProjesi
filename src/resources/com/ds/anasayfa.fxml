<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ds.Controllers.HomeController">
    <children>
        <Label text="Kontrol Paneli" textFill="#1f2937">
            <font>
                <Font name="Segoe UI Bold" size="24.0" />
            </font>
        </Label>

        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Son İlanlar" textFill="#1f2937">
                    <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="15.0" />
                    </VBox.margin>
                </Label>

                <TableView stylesheets="@style.css" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="75.0" text="İlan No" />
                        <TableColumn prefWidth="200.0" text="Emlak Başlığı" />
                        <TableColumn prefWidth="100.0" text="Kategori" />
                        <TableColumn prefWidth="100.0" text="Fiyat (TL)" />
                        <TableColumn prefWidth="100.0" text="Durum" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <effect>
                <DropShadow color="#0000000d" height="10.0" radius="4.5" width="10.0" />
            </effect>
        </VBox>

    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>